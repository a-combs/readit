<!DOCTYPE html>
<html>
  <head>
    <title>Readit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar-default">
      <div class="container-fluid">
        
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class=""><a href="/posts">Posts <span class="sr-only">(current)</span></a></li>
            <li><a href="/users">Users</a></li>            
          </ul>
          <div class="col-sm-3 col-md-3">
            <%= form_tag users_path, method: 'get', class: 'navbar-form', role: 'search' do %>
              <div class="input-group">
               <%= text_field_tag :query, params[:query], size: 150, placeholder: "Search", class: "form-control"%>
              </div>
                <%= submit_tag 'Search', class: 'btn btn-success' %>       
              
            <% end %>
          </div>
            <!-- <button type="Search" class="btn btn-primary">Search</button> -->
                  
        </div>
    </nav>

    <div class="container">
      <div class="navbar">
        <% if @current_user.present? %>
        <h3> <%= @current_user.username %> is logged in </h3>
          <td><%= link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' } %></td>
        <% end %>
      </div> 
       <p id="notice"><%= notice %></p>  
      	<%= yield %>
    </div>	
  </body>
</html>
